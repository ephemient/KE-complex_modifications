    {
      "description": "Double Shift to Caps Lock (or mouse keys)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "left_shift"
              },
              {
                "key_code": "right_shift"
              }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_up_when": "all"
            },
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "caps_lock",
              "hold_down_milliseconds": 200
            }
          ],
          "to": {
            "set_variable": {
              "name": "alternate_mode",
              "value": 1
            }
          },
          "to_after_key_up": {
            "set_variable": {
              "name": "alternate_mode",
              "value": 0
            }
          }
        },
        {
          "type": "basic",
